# Database (SQLite)
DATABASE_URL=sqlite:///./bookwhisperer.db

# Ollama
OLLAMA_URL=http://localhost:11434
OLLAMA_MODEL=llama2
OLLAMA_MAX_TOKENS=4000  # Max tokens per LLM request

# Chatterbox TTS
CHATTERBOX_URL=http://localhost:4123
TTS_MAX_CHUNK_SIZE=5000  # Max characters per TTS request

# Storage
UPLOAD_STORAGE_PATH=storage/uploads
AUDIO_STORAGE_PATH=storage/audio
MAX_UPLOAD_SIZE=52428800  # 50MB in bytes

# API
API_V1_PREFIX=/api/v1
PROJECT_NAME=BookWhisperer

# Logging
LOG_LEVEL=INFO
